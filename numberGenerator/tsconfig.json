{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2015",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": false,
    "rootDirs": ["../src"]
  },
  "include": ["src/**/*", "src/__tests__"]
}
